<?xml version="1.0" encoding="utf-8" ?>
<!-- init form ui component -->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">theme_form.theme_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SimiCart\SimpifyManagement\Block\Adminhtml\DefaultLanguage\Edit\SaveButton" />
            <button name="back" class="Magento\Customer\Block\Adminhtml\Edit\BackButton"/>
        </buttons>
        <deps>
            <dep>theme_form.theme_form_data_source</dep>
        </deps>
        <label translate="true">Theme</label>
        <dataScope>data</dataScope>
        <namespace>theme_form</namespace>
    </settings>

    <dataSource name="theme_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="simpify/theme/save"/>
        </settings>
        <dataProvider name="theme_form_data_source" class="SimiCart\SimpifyManagement\Ui\Component\Form\ThemeDataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label />
            <dataScope />
            <collapsible>false</collapsible>
        </settings>

        <!-- import hidden id field -->
        <field name="entity_id" sortOrder="100" formElement="hidden">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>

        <!-- import status toggle field -->
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">theme</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Enable Theme</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <!-- import name text field -->
        <field name="name" sortOrder="200" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Theme Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
            </settings>
        </field>

        <!-- import image uploader field -->
        <field name="image" sortOrder="300" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">theme</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Theme Image</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="simpify/theme_image/upload"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Theme Gallery</openDialogTitle>
                        <initialMediaGalleryOpenSubpath>simpify</initialMediaGalleryOpenSubpath>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <htmlContent name="gallery" sortOrder="400">
            <argument name="data" xsi:type="array">
                <item name="wrapper" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Preview Images</item>
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="opened" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <wrapper>
                    <canShow>true</canShow>
                    <componentType>fieldset</componentType>
                </wrapper>
            </settings>
            <block name="gallery" class="SimiCart\SimpifyManagement\Block\Adminhtml\Theme\Helper\Form\ImagePreview">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Preview Images</item>
                        <item name="collapsible" xsi:type="boolean">true</item>
                        <item name="opened" xsi:type="boolean">false</item>
                        <item name="sortOrder" xsi:type="string">22</item>
                        <item name="canShow" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">fieldset</item>
                    </argument>
                </arguments>
                <block class="SimiCart\SimpifyManagement\Block\Adminhtml\Theme\Helper\Form\ImagePreview\Content" as="content">
                    <arguments>
                        <argument name="config" xsi:type="array">
                            <item name="parentComponent" xsi:type="string">theme_form.theme_form.general</item>
                        </argument>
                    </arguments>
<!--                    <block class="Magento\ProductVideo\Block\Adminhtml\Product\Edit\NewVideo" name="new-video" template="Magento_ProductVideo::product/edit/slideout/form.phtml"/>-->
                </block>
            </block>
        </htmlContent>
    </fieldset>
</form>
