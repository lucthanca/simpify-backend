<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">apptext_form.apptext_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">App Text</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SimiCart\SimpifyManagement\Block\Adminhtml\DefaultLanguage\Edit\SaveButton" />
            <button name="back" class="Magento\Customer\Block\Adminhtml\Edit\BackButton"/>
        </buttons>
        <deps>
            <dep>apptext_form.apptext_form_data_source</dep>
        </deps>
        <label translate="true">App Text</label>
        <dataScope>data</dataScope>
        <namespace>apptext_form</namespace>
    </settings>

    <dataSource name="apptext_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <!--            <validateUrl path="customer/index/validate"/>-->
            <submitUrl path="simpify/apptext/save"/>
        </settings>
        <dataProvider name="apptext_form_data_source" class="SimiCart\SimpifyManagement\Ui\Component\DefaultLanguage\Form\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="text" formElement="input" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">apptext</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Default Text</label>
                <dataScope>text</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
